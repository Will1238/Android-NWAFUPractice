<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.will.classlist.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout android:id="@+id/input1"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/showClass"
                android:text="班级："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText android:id="@+id/inputClass"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout android:id="@+id/input2"
            android:layout_below="@id/input1"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/showNo"
                android:text="学号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText android:id="@+id/inputNo"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout android:id="@+id/input3"
            android:layout_below="@id/input2"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/showName"
                android:text="姓名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText android:id="@+id/inputName"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button android:id="@+id/btnAdd"
            android:layout_below="@id/input3"
            android:text="添加"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/ListHead"
            android:layout_below="@id/btnAdd"
            android:text="  班级                  学号                  姓名"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <ListView android:id="@+id/showList"
            android:layout_below="@id/ListHead"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
